{
  "name": "privmx-bridge",
  "version": "1.0.0",
  "description": "Zero-knowledge server for secure storage and transfer of E2E encrypted data.",
  "scripts": {
    "types-gen": "rm -rf out && tsc --emitDeclarationOnly --declaration && touch out/index.d.ts && ~/scripts/types.sh",
    "build": "rm -rf out && ./node_modules/.bin/tsc",
    "watch": "rm -rf out && ./node_modules/.bin/tsc -w",
    "lint": "eslint -c eslint.config.mjs ./src",
    "test": "q2-test out",
    "compile": "npm run build && npm run gen-docs && npm run lint && npm run test",
    "doc": "typedoc src/Api.ts --name privmx-api --readme API.md",
    "start": "nodemon out/index.js",
    "gen-docs": "node ./out/docs/scripts/gen_docs.js",
    "e2e-tests-single-thread": "node ./out/test/end2end/run.js",
    "e2e-tests": "node ./out/test/end2end/runMulti.js",
    "gen-json-docs": "node ./out/docs/scripts/gen_json_docs.js",
    "gen-slate-from-json": "node ./out/docs/scripts/gen_slate_from_json.js",
    "create-api-key": "node ./out/init/scripts/createApiKey.js"
  },
  "jest": {
    "roots": [
      "out"
    ]
  },
  "author": "Simplito",
  "license": "PrivMX Free License",
  "keywords": [
    "privmx",
    "simplito",
    "e2ee",
    "end-to-end",
    "encryption",
